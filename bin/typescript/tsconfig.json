{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "commonjs",  
    "moduleResolution": "node",                              
    "rootDirs": ["../../src/**/*.ts", "../../lib/**/*.ts"],                                 
    "allowJs": true,                                  
    "checkJs": true,                                  
    "outDir": "../../build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,     
    "noEmitOnError": false
  },
  "include": [
    "../../src/**/*.ts",
    "../../lib/**/*.ts"
  ],
  "watchOptions":{
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "synchronousWatchDirectory": true,
  }
}
