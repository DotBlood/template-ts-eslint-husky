{
  "name": "template_ts_eslint_husky",
  "version": "0.0.1",
  "description": "Template for TypeScript with ESLint and Husky",
  "author": "DotBlood",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DotBlood/template-ts-eslint-husky/issues"
  },
  "main": "./build/index.js",
  "scripts": {
    "dev": "tsc --watch -p ./bin/configs/typescript/tsconfig.json",
    "start": "npm run build && node ./build/index.js",
    "build": "npm run lint && tsc -p ./bin/configs/typescript/tsconfig.json",
    "lint": "npx eslint ./src/**/*.ts --config ./bin/linter/.eslintrc.json",
    "lint:fix": "npx eslint --fix ./src/**/*.ts --config ./bin/linter/.eslintrc.json"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
